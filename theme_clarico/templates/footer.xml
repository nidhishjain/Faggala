<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--====================== Footer Style-1 =======================-->
    <template id="customize_footer_style_1" inherit_id="website.footer_custom"
              active="True">
        <xpath expr="//div[@id='footer']" position="replace">
            <div id="footer" class="oe_structure oe_structure_solo">
                <!--<xpath expr="//div[@id='footer']" position="before">-->
                <section class="s_text_block pt32">
                    <div class="container">
                        <div class="row">
                            <div class="te_footer_add_tel_email col-lg-3">
                                <!-- Website Logo -->
                                <div class="d-block mb16">
                                    <a href="/" class="te_footer_logo logo">
                                        <span t-field="website.logo" class="te_footer_logo_img"
                                              t-options="{'widget': 'image'}" role="img"
                                              t-att-aria-label="'Logo of %s' % website.name"
                                              t-att-title="website.name"/>
                                    </a>
                                </div>
                                <!-- Company Address -->
                                <ul class="te_footer_info_text">
                                    <li t-if="res_company.street or res_company.street2 or res_company.city or res_company.state_id or res_company.zip or res_company.country_id">
                                        <span class="te_footer_add_tel_email_text_ept">
                                            <span class="fa fa-map-marker"></span>
                                        </span>
                                        <span class="te_ftr_text_style d-inline-block pl-sm-2">
                                            <span t-field="res_company.street"/>
                                            <span t-field="res_company.street2"/>
                                            <span t-field="res_company.city"/>
                                            <span t-field="res_company.state_id"/>
                                            <span t-field="res_company.zip"/>
                                            <span t-field="res_company.country_id"/>
                                        </span>
                                    </li>
                                    <li t-if="res_company.phone">
                                        <span class="te_footer_add_tel_email_text_ept">
                                            <span class="fa fa-phone"></span>
                                        </span>
                                        <a t-att-href="'tel: %s' %res_company.phone">
                                            <span t-field="res_company.phone"
                                                  class="te_ftr_text_style d-inline-block pl-sm-2"/>
                                        </a>
                                    </li>
                                    <li t-if="res_company.email">
                                        <span class="te_footer_add_tel_email_text_ept">
                                            <span class="fa fa-envelope"></span>
                                        </span>
                                        <a t-att-href="'mailto: %s' %res_company.email">
                                            <span t-field="res_company.email"
                                                  class="te_ftr_text_style d-inline-block pl-sm-2"/>
                                        </a>
                                    </li>
                                </ul>
                                <!-- Social Icon -->
                                <!-- Social Icon -->
                                <div class="te_footer_social_icon">

                                    <a t-if="website.social_facebook" t-att-href="website.social_facebook"
                                       class="btn btn-sm btn-link">
                                        <span class="fa fa-facebook-square"/>
                                    </a>
                                    <a t-if="website.social_twitter" t-att-href="website.social_twitter"
                                       class="btn btn-sm btn-link">
                                        <span class="fa fa-twitter"/>
                                    </a>
                                    <a t-if="website.social_linkedin" t-att-href="website.social_linkedin"
                                       class="btn btn-sm btn-link">
                                        <span class="fa fa-linkedin"/>
                                    </a>
                                    <a t-if="website.social_youtube" t-att-href="website.social_youtube"
                                       class="btn btn-sm btn-link">
                                        <span class="fa fa-youtube-play"/>
                                    </a>
                                    <a t-if="website.social_github" t-att-href="website.social_github"
                                       class="btn btn-sm btn-link">
                                        <span class="fa fa-github"/>
                                    </a>
                                    <a t-if="website.social_instagram" t-att-href="website.social_instagram"
                                       class="btn btn-sm btn-link">
                                        <span class="fa fa-instagram"/>
                                    </a>

                                </div>
                            </div>
                            <!-- static Menu -->
                            <p></p>
                            <section class="col-lg-6" t-field="website.footer_style_1_content_ept"/>
                            <!-- Payment Methods -->
                            <div class="col-lg-3 te_language">
                                <section class="te_newsletter">
                                    <div class="d-inline-block te_newsletter_title pr-3">
                                        <h4>Newsletter Signup :</h4>
                                    </div>
                                    <div class="te_newsletter_content">
                                        <div class="d-inline-block">
                                            <div class="input-group js_subscribe" data-list-id="1" data-subscribe="off">
                                                <input type="email" name="email" class="js_subscribe_email form-control" placeholder="your email..."/>
                                                <span class="input-group-append">
                                                    <a role="button" href="#" class="btn btn-primary js_subscribe_btn o_default_snippet_text">Subscribe</a>
                                                    <a role="button" href="#" class="btn btn-success js_subscribed_btn d-none o_default_snippet_text" disabled="disabled">Thanks</a>
                                                </span>
                                                <div class="alert alert-success d-none o_default_snippet_text" role="status">Thanks for your subscription!</div>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                                <section class="te_footer_text_img">
                                    <section class="te_payment_list">
                                        <t t-set="icons"
                                           t-value="request.env['payment.acquirer'].sudo().search([('state', 'in', ['enabled', 'test']), ('website_id','in',(False,website.id))]).mapped('payment_icon_ids')"></t>
                                        <h4 t-if="icons">Payment Methods</h4>
                                        <t t-foreach="icons" t-as="icon">
                                            <span t-field="icon.image"
                                                 t-options="{'widget': 'image', 'alt-field': 'name'}"/>
                                        </t>
                                    </section>
                                </section>
                                <!-- Multiple Language Selected-->
                                <t t-call="website.language_selector"></t>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <div class="te_body_bg">
                <div class="container">
                    <section t-field="website.website_footer_extra_links"/>
                    <!-- Copyright Text-->
                    <section class="te_copyright_add_language">
                        <span>Copyright &amp;copy;</span>
                        <span t-field="res_company.name" itemprop="name">Company name</span>
                    </section>
                </div>
            </div>
            <!-- Scroll Up Icon -->
            <div class="scrollup-div text-center">
                <a href="#" class="scrollup-a">
                    <span class="fa fa-angle-up scrollup-i text-center"></span>
                </a>
            </div>
        </xpath>
    </template>
