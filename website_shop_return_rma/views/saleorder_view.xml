<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="return_rma_orderline_form" model="ir.ui.view">
            <field name="name">sale.order.form.view</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//sheet/div[@class='oe_button_box']" position="inside">
            		<button class="oe_stat_button" name="action_view_return_rma"  
            		attrs="{'invisible': [('rma_order_count', '=', 0)]}" type="object" icon="fa-truck">
                        <field string="RMA Orders" name="rma_order_count" widget="statinfo" />
                    </button>
            	</xpath>
                <xpath expr="//sheet/group/group/field[@name='validity_date']" position="after">
                    <field name='return_date'/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
