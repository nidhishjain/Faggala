<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="customer_comment_assets_frontend" inherit_id="website.assets_frontend">
          <xpath expr="." position="inside">
                <script type="text/javascript" src="/website_customer_order_comment/static/src/js/website_customer_order_comment.js"></script>
          </xpath>
    </template>
        
    <template id="website_sale_customer_comment" inherit_id="website_sale.payment">     
        <xpath expr="//div[@id='payment_method']" position="before">
            <div class="mb8 row" t-if="not website.is_customer_comment_features">               
                <div t-attf-class="form-group col-lg-6" dir="rtl" lang="ar" style="margin-right:40px;">
                    <label class="control-label" for="customer_comment">تعليق العميل علي الطلب</label>
                    <textarea rows="3" id="customer_comment" class="form-control" placeholder="اترك تعليقك..."></textarea>
                </div> 
            </div>  
        </xpath>        
    </template>
</odoo>
